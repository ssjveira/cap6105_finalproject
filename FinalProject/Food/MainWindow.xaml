<Window x:Class="Food.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="800" Background="Aqua" >
    <Grid>
        <InkCanvas x:Name="_inkCanvas" Width="500" Height="500"></InkCanvas>
        <Button Content="Save Features" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Click="Create_Features" Margin="10,85,0,0"/>
        <Image Name="img" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <ComboBox Name="imgData" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,42,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Name="vw" VerticalAlignment="Top" Width="120" Margin="10,155,0,0"/>
        <Button Name="features" Content="Load Features" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="90" Click="features_Click"/>
        <Button Name="save_canvas" Content="save" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="90" Click="save_canvas_Click" />




    </Grid>
</Window>
